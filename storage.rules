rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // User profile images - users can only access their own
    match /users/{userId}/{allPaths=**} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == userId;
    }
    
    // Business related files - only accessible by business owner
    match /businesses/{businessId}/{allPaths=**} {
      allow read: if isSignedIn() && 
                     firestore.exists(/databases/(default)/documents/businesses/$(businessId)) &&
                     firestore.get(/databases/(default)/documents/businesses/$(businessId)).data.userId == request.auth.uid;
      allow write: if isSignedIn() && 
                      firestore.exists(/databases/(default)/documents/businesses/$(businessId)) &&
                      firestore.get(/databases/(default)/documents/businesses/$(businessId)).data.userId == request.auth.uid;
    }
    
    // Expense receipts - only accessible by business owner
    // Path format: receipts/{businessId}/{expenseId}/{filename}
    match /receipts/{businessId}/{expenseId}/{filename} {
      allow read: if isSignedIn() && 
                     firestore.exists(/databases/(default)/documents/businesses/$(businessId)) &&
                     firestore.get(/databases/(default)/documents/businesses/$(businessId)).data.userId == request.auth.uid;
      allow write: if isSignedIn() && 
                      firestore.exists(/databases/(default)/documents/businesses/$(businessId)) &&
                      firestore.get(/databases/(default)/documents/businesses/$(businessId)).data.userId == request.auth.uid &&
                      // Verify the expense belongs to this business
                      firestore.exists(/databases/(default)/documents/expenses/$(expenseId)) &&
                      firestore.get(/databases/(default)/documents/expenses/$(expenseId)).data.businessId == businessId;
    }
    
    // Tax documents and reports - only accessible by business owner
    // Path format: tax-documents/{businessId}/{documentType}/{filename}
    match /tax-documents/{businessId}/{documentType}/{filename} {
      allow read: if isSignedIn() && 
                     firestore.exists(/databases/(default)/documents/businesses/$(businessId)) &&
                     firestore.get(/databases/(default)/documents/businesses/$(businessId)).data.userId == request.auth.uid;
      allow write: if isSignedIn() && 
                      firestore.exists(/databases/(default)/documents/businesses/$(businessId)) &&
                      firestore.get(/databases/(default)/documents/businesses/$(businessId)).data.userId == request.auth.uid;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

