rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Helper function to check if user owns a business
    function ownsBusiness(businessId) {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/businesses/$(businessId)) &&
             get(/databases/$(database)/documents/businesses/$(businessId)).data.userId == request.auth.uid;
    }
    
    // Users collection - users can only access their own document
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isOwner(userId) && 
                       // Prevent users from modifying subscription tier directly
                       (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['subscriptionTier']));
      allow delete: if isOwner(userId);
    }
    
    // Businesses collection - users can only access their own businesses
    match /businesses/{businessId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && 
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.keys().hasAll(['name', 'type', 'userId', 'createdAt', 'currency']);
      allow update: if isSignedIn() && 
                       resource.data.userId == request.auth.uid &&
                       // Prevent changing the owner
                       request.resource.data.userId == resource.data.userId;
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    
    // Revenues collection - users can only access revenues from their businesses
    match /revenues/{revenueId} {
      allow read: if ownsBusiness(resource.data.businessId);
      allow create: if isSignedIn() && 
                       ownsBusiness(request.resource.data.businessId) &&
                       request.resource.data.keys().hasAll(['businessId', 'amount', 'source', 'date']);
      allow update: if ownsBusiness(resource.data.businessId) &&
                       // Prevent changing the business association
                       request.resource.data.businessId == resource.data.businessId;
      allow delete: if ownsBusiness(resource.data.businessId);
    }
    
    // Expenses collection - users can only access expenses from their businesses
    match /expenses/{expenseId} {
      allow read: if ownsBusiness(resource.data.businessId);
      allow create: if isSignedIn() && 
                       ownsBusiness(request.resource.data.businessId) &&
                       request.resource.data.keys().hasAll(['businessId', 'amount', 'category', 'date']);
      allow update: if ownsBusiness(resource.data.businessId) &&
                       // Prevent changing the business association
                       request.resource.data.businessId == resource.data.businessId;
      allow delete: if ownsBusiness(resource.data.businessId);
    }
    
    // Inventory collection - users can only access inventory from their businesses
    match /inventory/{inventoryId} {
      allow read: if ownsBusiness(resource.data.businessId);
      allow create: if isSignedIn() && 
                       ownsBusiness(request.resource.data.businessId) &&
                       request.resource.data.keys().hasAll(['businessId', 'name', 'quantity', 'minQuantity', 'unit', 'cost', 'createdAt', 'updatedAt', 'userId']);
      allow update: if ownsBusiness(resource.data.businessId) &&
                       // Prevent changing the business association
                       request.resource.data.businessId == resource.data.businessId;
      allow delete: if ownsBusiness(resource.data.businessId);
    }
    
    // Tax Settings collection - users can only access tax settings from their businesses
    match /taxSettings/{settingsId} {
      allow read: if ownsBusiness(resource.data.businessId);
      allow create: if isSignedIn() && 
                       ownsBusiness(request.resource.data.businessId) &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.keys().hasAll(['businessId', 'userId']);
      allow update: if ownsBusiness(resource.data.businessId) &&
                       // Prevent changing the business or user association
                       request.resource.data.businessId == resource.data.businessId &&
                       request.resource.data.userId == resource.data.userId;
      allow delete: if ownsBusiness(resource.data.businessId);
    }
    
    // Tax Reports collection - users can only access tax reports from their businesses
    match /taxReports/{reportId} {
      allow read: if ownsBusiness(resource.data.businessId);
      allow create: if isSignedIn() && 
                       ownsBusiness(request.resource.data.businessId) &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.keys().hasAll(['businessId', 'userId', 'reportType', 'year', 'createdAt']);
      allow update: if ownsBusiness(resource.data.businessId) &&
                       // Prevent changing the business or user association
                       request.resource.data.businessId == resource.data.businessId &&
                       request.resource.data.userId == resource.data.userId;
      allow delete: if ownsBusiness(resource.data.businessId);
    }
    
    // Tax Categories collection - users can only access tax categories from their businesses
    match /taxCategories/{categoryId} {
      allow read: if ownsBusiness(resource.data.businessId);
      allow create: if isSignedIn() && 
                       ownsBusiness(request.resource.data.businessId) &&
                       request.resource.data.keys().hasAll(['businessId', 'name', 'deductible', 'deductionType']);
      allow update: if ownsBusiness(resource.data.businessId) &&
                       // Prevent changing the business association
                       request.resource.data.businessId == resource.data.businessId;
      allow delete: if ownsBusiness(resource.data.businessId);
    }
    
    // Expense Tax Info collection - users can only access expense tax info from their businesses
    match /expenseTaxInfo/{taxInfoId} {
      allow read: if isSignedIn() && 
                     exists(/databases/$(database)/documents/expenses/$(resource.data.expenseId)) &&
                     get(/databases/$(database)/documents/expenses/$(resource.data.expenseId)).data.businessId != null &&
                     ownsBusiness(get(/databases/$(database)/documents/expenses/$(resource.data.expenseId)).data.businessId);
      allow create: if isSignedIn() && 
                       request.resource.data.keys().hasAll(['expenseId', 'deductible', 'deductionAmount', 'receiptAttached', 'createdAt']) &&
                       exists(/databases/$(database)/documents/expenses/$(request.resource.data.expenseId)) &&
                       get(/databases/$(database)/documents/expenses/$(request.resource.data.expenseId)).data.businessId != null &&
                       ownsBusiness(get(/databases/$(database)/documents/expenses/$(request.resource.data.expenseId)).data.businessId);
      allow update: if isSignedIn() &&
                       exists(/databases/$(database)/documents/expenses/$(resource.data.expenseId)) &&
                       get(/databases/$(database)/documents/expenses/$(resource.data.expenseId)).data.businessId != null &&
                       ownsBusiness(get(/databases/$(database)/documents/expenses/$(resource.data.expenseId)).data.businessId) &&
                       // Prevent changing the expense association
                       request.resource.data.expenseId == resource.data.expenseId;
      allow delete: if isSignedIn() &&
                       exists(/databases/$(database)/documents/expenses/$(resource.data.expenseId)) &&
                       get(/databases/$(database)/documents/expenses/$(resource.data.expenseId)).data.businessId != null &&
                       ownsBusiness(get(/databases/$(database)/documents/expenses/$(resource.data.expenseId)).data.businessId);
    }
    
    // Insights collection - users can only access insights from their businesses
    match /insights/{insightId} {
      allow read: if ownsBusiness(resource.data.businessId);
      allow create: if isSignedIn() && 
                       ownsBusiness(request.resource.data.businessId) &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.keys().hasAll(['businessId', 'userId', 'type', 'title', 'description', 'createdAt']);
      allow update: if ownsBusiness(resource.data.businessId) &&
                       // Prevent changing the business or user association
                       request.resource.data.businessId == resource.data.businessId &&
                       request.resource.data.userId == resource.data.userId;
      allow delete: if ownsBusiness(resource.data.businessId);
    }
    
    // Spending Patterns collection - users can only access spending patterns from their businesses
    match /spendingPatterns/{patternId} {
      allow read: if ownsBusiness(resource.data.businessId);
      allow create: if isSignedIn() && 
                       ownsBusiness(request.resource.data.businessId) &&
                       request.resource.data.keys().hasAll(['businessId', 'category', 'averageMonthly', 'lastUpdated']);
      allow update: if ownsBusiness(resource.data.businessId) &&
                       // Prevent changing the business association
                       request.resource.data.businessId == resource.data.businessId;
      allow delete: if ownsBusiness(resource.data.businessId);
    }
    
    // Cost Optimizations collection - users can only access cost optimizations from their businesses
    match /costOptimizations/{optimizationId} {
      allow read: if ownsBusiness(resource.data.businessId);
      allow create: if isSignedIn() && 
                       ownsBusiness(request.resource.data.businessId) &&
                       request.resource.data.keys().hasAll(['businessId', 'category', 'currentSpend', 'recommendedSpend', 'potentialSavings', 'createdAt']);
      allow update: if ownsBusiness(resource.data.businessId) &&
                       // Prevent changing the business association
                       request.resource.data.businessId == resource.data.businessId;
      allow delete: if ownsBusiness(resource.data.businessId);
    }
    
    // Cash Flow Forecasts collection - users can only access forecasts from their businesses
    match /cashFlowForecasts/{forecastId} {
      allow read: if ownsBusiness(resource.data.businessId);
      allow create: if isSignedIn() && 
                       ownsBusiness(request.resource.data.businessId) &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.keys().hasAll(['businessId', 'userId', 'forecastPeriod', 'startDate', 'endDate', 'createdAt']);
      allow update: if ownsBusiness(resource.data.businessId) &&
                       // Prevent changing the business or user association
                       request.resource.data.businessId == resource.data.businessId &&
                       request.resource.data.userId == resource.data.userId;
      allow delete: if ownsBusiness(resource.data.businessId);
    }
    
    // Recurring Transactions collection - users can only access recurring transactions from their businesses
    match /recurringTransactions/{transactionId} {
      allow read: if ownsBusiness(resource.data.businessId);
      allow create: if isSignedIn() && 
                       ownsBusiness(request.resource.data.businessId) &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.keys().hasAll(['businessId', 'userId', 'type', 'name', 'amount', 'frequency', 'startDate', 'active', 'createdAt']);
      allow update: if ownsBusiness(resource.data.businessId) &&
                       // Prevent changing the business or user association
                       request.resource.data.businessId == resource.data.businessId &&
                       request.resource.data.userId == resource.data.userId;
      allow delete: if ownsBusiness(resource.data.businessId);
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

